{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/static",
        "function": "armoryStaticApp"
      },
      {
        "source": "/api/static/**",
        "function": "armoryStaticApp"
      },
      {
        "source": "/api",
        "function": "armoryServerApp"
      },
      {
        "source": "/api/**",
        "function": "armoryServerApp"
      },
      {
        "source": "!/@(api)/**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 3002
    },
    "ui": {
      "enabled": false
    },
    "singleProjectMode": true
  }
}
